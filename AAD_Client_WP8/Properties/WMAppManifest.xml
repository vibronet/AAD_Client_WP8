<?xml version="1.0" encoding="utf-8"?>

<Deployment xmlns="http://schemas.microsoft.com/windowsphone/2012/deployment" AppPlatformVersion="8.0">
  <DefaultLanguage xmlns="" code="en-US"/>
  <App xmlns="" ProductID="{2b3a4233-b66b-4b59-b6e2-eea297700362}" Title="WP8 AD Toy Client" RuntimeType="Silverlight" Version="1.0.0.0" Genre="apps.normal"  Author="Vittorio Bertocci" Description="A sample WP8 app to demonstrate how to get tokens from Windows Azure and Windows Server AD" Publisher="AAD_Client_WP8" PublisherID="{25b0b0de-9898-4bb4-a988-f2e06b0cdd03}">
    <IconPath IsRelative="true" IsResource="false">Assets\ApplicationIcon.png</IconPath>
    <Capabilities>
      <Capability Name="ID_CAP_NETWORKING"/>
      <Capability Name="ID_CAP_MEDIALIB_AUDIO"/>
      <Capability Name="ID_CAP_MEDIALIB_PLAYBACK"/>
      <Capability Name="ID_CAP_SENSORS"/>
      <Capability Name="ID_CAP_WEBBROWSERCOMPONENT"/>
    </Capabilities>
    <Tasks>
      <DefaultTask  Name ="_default" NavigationPage="MainPage.xaml"/>
    </Tasks>
    <Tokens>
      <PrimaryToken TokenID="AAD_Client_WP8Token" TaskName="_default">
        <TemplateFlip>
          <SmallImageURI IsRelative="true" IsResource="false">Assets\Tiles\FlipCycleTileSmall.png</SmallImageURI>
          <Count>0</Count>
          <BackgroundImageURI IsRelative="true" IsResource="false">Assets\Tiles\FlipCycleTileMedium.png</BackgroundImageURI>
          <Title>WP8 AD Toy Client</Title>
          <BackContent></BackContent>
          <BackBackgroundImageURI></BackBackgroundImageURI>
          <BackTitle></BackTitle>
          <DeviceLockImageURI></DeviceLockImageURI>
          <HasLarge></HasLarge>
        </TemplateFlip>
      </PrimaryToken>
    </Tokens>
    <Extensions>
      <FileTypeAssociation Name="AD WP8 Client token request file type" TaskID="_default" NavUriFragment="fileToken=%s">
        <Logos>
          <Logo Size="small" IsRelative="true">Assets/SmallPentagon.png</Logo>
          <Logo Size="medium" IsRelative="true">Assets/MediumPentagon.png</Logo>
          <Logo Size="large" IsRelative="true">Assets/LargePentagon.png</Logo>
        </Logos>
        <SupportedFileTypes>
          <FileType ContentType="application/tknrq">.tknrq</FileType>          
        </SupportedFileTypes>
      </FileTypeAssociation>
    </Extensions>

    <ScreenResolutions>
      <ScreenResolution Name="ID_RESOLUTION_WVGA"/>
      <ScreenResolution Name="ID_RESOLUTION_WXGA"/>
      <ScreenResolution Name="ID_RESOLUTION_HD720P"/>
    </ScreenResolutions>
  </App>
</Deployment>